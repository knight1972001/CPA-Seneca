<header id="header" class="masthead" style="background-image:url('images/bakery.jpg');">
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in"><span>Welcome To Bakery</span></div>
                <div class="intro-heading text-uppercase"><span>It's Nice To Meet You</span></div>
        </div>
    </header>

    <div class="container" style="margin-top: 50px">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs justify-content-center">
                <li class="nav-item">
                <a class="nav-link active" style="font-size: 20px" href="#login">Login</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" style="font-size: 20px" href="#register">Register</a>
                </li>
            </ul>

                        <!-- Tab panes -->
        <div class="tab-content">
            <div id="login" class="container tab-pane active"><br>
                <div class="holder">
                    <h2>Welcome back!</h2>
                    <input type="text" placeholder="Email address" required><br>
                    <input type="password" placeholder="Password" name="psw" required>
                    <br><button>Login</button>
                </div>
            </div>
            <div id="register" class="container tab-pane fade"><br>
                <div class="holder">
                    <h3>Sign Up</h3>
                    <p>Create your account by entering your email address and choosing a password!</p>
                    <input type="text" placeholder="First Name" required><br>
                    <input type="text" placeholder="Last Name" required><br>
                    <input type="text" placeholder="Email address" required><br>
                    <input type="password" placeholder="Password" name="psw" required>
                    <br><button>Register</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function(){
            $(".nav-tabs a").click(function(){
                $(this).tab('show');
            });
        });
    </script>